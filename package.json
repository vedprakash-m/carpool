{
  "name": "carpool-monorepo",
  "version": "1.0.0",
  "description": "Carpool - Comprehensive carpool management application",
  "main": "index.js",
  "workspaces": [
    "backend",
    "frontend",
    "shared",
    "e2e"
  ],
  "scripts": {
    "start": "func start",
    "deploy": "func azure functionapp publish carpool-api-prod",
    "build:shared": "cd shared && npm run build",
    "type-check": "npm run type-check:backend && npm run type-check:frontend",
    "type-check:backend": "npm run type-check --workspace=backend",
    "type-check:frontend": "npm run type-check --workspace=frontend",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "npm run lint --workspace=backend",
    "lint:frontend": "npm run lint --workspace=frontend",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "npm test --workspace=backend",
    "test:frontend": "npm test --workspace=frontend",
    "test:backend:ci": "npm run test:ci --workspace=backend",
    "test:frontend:ci": "npm run test:ci --workspace=frontend",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "npm run build --workspace=backend",
    "build:frontend": "npm run build --workspace=frontend",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev"
  },
  "dependencies": {},
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.8.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.57.1"
  }
}
