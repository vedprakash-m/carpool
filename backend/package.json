{
  "name": "@vcarpool/backend",
  "version": "1.0.0",
  "description": "Azure Functions backend for vcarpool application",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "build": "npm run clean && tsc && npm run setup-functions && npm run ensure-functions",
    "dev": "tsc --watch",
    "start": "func start",
    "deploy": "npm run build && func azure functionapp publish vcarpool-functions",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:health-check": "node -e \"console.log('Health check passed')\"",
    "perf:phase2": "node perf/phase2-perf.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "setup-functions": "node scripts/setup-functions.js",
    "ensure-functions": "node scripts/ensure-functions.js",
    "deploy:azure": "func azure functionapp publish vcarpool-api-manual --typescript"
  },
  "dependencies": {
    "@azure/cosmos": "^4.4.1",
    "@azure/functions": "^4.5.0",
    "@types/lru-cache": "^7.10.9",
    "@vcarpool/shared": "file:../shared",
    "applicationinsights": "^3.7.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.6.1",
    "isomorphic-dompurify": "^2.25.0",
    "jsonwebtoken": "^9.0.2",
    "lru-cache": "^11.1.0",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.8",
    "rate-limiter-flexible": "^5.0.3",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.8.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4",
    "@azure/service-bus": "^7.9.0",
    "@azure/web-pubsub": "^1.2.0",
    "web-push": "^3.5.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/dompurify": "^3.0.5",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.17.50",
    "@types/nodemailer": "^6.4.14",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.57.1",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "autocannon": "^7.14.0",
    "wait-port": "^1.0.1"
  },
  "optionalDependencies": {
    "azure-functions-core-tools": "^4.0.5496"
  }
}
