#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🚀 Running optimized pre-push validation..."

# Run optimized validation that skips redundant checks
echo "🔍 Running optimized validation..."
./scripts/pre-push-optimized.sh || {
    echo "❌ Optimized validation failed"
    exit 1
}

# Check if Docker is available for additional E2E tests
if docker info >/dev/null 2>&1; then
    echo "🐳 Docker available - E2E tests included in validation"
else
    echo "⚠️  Docker not available - E2E tests will run in CI pipeline"
fi

echo "✅ Pre-push validation passed!"
