{
  "root": true,
  "extends": ["next/core-web-vitals"],
  "rules": {
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "prefer-const": "warn",
    "react/no-unescaped-entities": "off",
    "react/display-name": "off"
  },
  "overrides": [
    {
      "files": [
        "**/__tests__/**/*.{ts,tsx}",
        "**/*.test.{ts,tsx}",
        "**/*.spec.{ts,tsx}"
      ],
      "rules": {
        "react/display-name": "off",
        "no-console": "off"
      }
    }
  ]
}
