{
  "routes": [
    {
      "route": "/health",
      "methods": ["GET"],
      "rewrite": "https://${API_ENDPOINT}/api/health"
    },
    {
      "route": "/api/auth/*",
      "methods": ["POST"],
      "allowedRoles": ["anonymous"],
      "rewrite": "https://${API_ENDPOINT}/api/auth/$1"
    },
    {
      "route": "/login",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/register",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/forgot-password",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/*",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
      "allowedRoles": ["authenticated"],
      "rewrite": "https://${API_ENDPOINT}/api/$1"
    },
    {
      "route": "/*",
      "allowedRoles": ["authenticated"],
      "serve": "/index.html",
      "statusCode": 200
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/images/*",
      "/_next/static/*",
      "/static/*",
      "/*.css$",
      "/*.js$",
      "/*.json$",
      "/*.svg$",
      "/*.png$",
      "/*.jpg$",
      "/*.jpeg$",
      "/*.gif$",
      "/*.ico$",
      "/*.txt$"
    ]
  },
  "responseOverrides": {
    "400": {
      "rewrite": "/_next/static/error-pages/400.html"
    },
    "401": {
      "redirect": "/login",
      "statusCode": 302
    },
    "403": {
      "rewrite": "/_next/static/error-pages/403.html"
    },
    "404": {
      "rewrite": "/_next/static/error-pages/404.html"
    }
  },
  "globalHeaders": {
    "X-Content-Type-Options": "nosniff",
    "X-Frame-Options": "DENY",
    "X-XSS-Protection": "1; mode=block",
    "Content-Security-Policy": "default-src 'self'; script-src 'self' 'unsafe-eval' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https://*.azurewebsites.net;"
  }
}
