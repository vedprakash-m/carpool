{
  "platform": {
    "apiRuntime": "node:20"
  },
  "routes": [
    {
      "route": "/health",
      "methods": ["GET"],
      "rewrite": "https://vcarpool-api-prod.azurewebsites.net/api/health"
    },
    {
      "route": "/api/auth/*",
      "methods": ["POST", "OPTIONS"],
      "allowedRoles": ["anonymous"],
      "rewrite": "https://vcarpool-api-prod.azurewebsites.net/api/auth/$1",
      "headers": {
        "Cache-Control": "no-cache, no-store, must-revalidate"
      }
    },
    {
      "route": "/login",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/register",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/forgot-password",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/*",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
      "allowedRoles": ["anonymous"],
      "rewrite": "https://vcarpool-api-prod.azurewebsites.net/api/$1",
      "headers": {
        "Cache-Control": "no-cache, no-store, must-revalidate"
      }
    },
    {
      "route": "/_next/static/css/*",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable",
        "Content-Type": "text/css"
      }
    },
    {
      "route": "/_next/static/js/*",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable",
        "Content-Type": "application/javascript"
      }
    },
    {
      "route": "/_next/static/*",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "route": "/images/*",
      "headers": {
        "Cache-Control": "public, max-age=2592000"
      }
    },
    {
      "route": "/favicon.ico",
      "headers": {
        "Cache-Control": "public, max-age=86400"
      }
    },
    {
      "route": "/*",
      "allowedRoles": ["anonymous"],
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      }
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/images/*",
      "/css/*",
      "/js/*",
      "/_next/*",
      "/favicon.ico",
      "/*.json",
      "/*.xml",
      "/*.txt",
      "/*.svg",
      "/*.ico",
      "/manifest.json"
    ]
  },
  "responseOverrides": {
    "401": {
      "redirect": "/login",
      "statusCode": 302
    },
    "404": {
      "rewrite": "/404.html",
      "statusCode": 404
    }
  },
  "globalHeaders": {
    "X-Content-Type-Options": "nosniff",
    "X-Frame-Options": "DENY",
    "X-XSS-Protection": "1; mode=block",
    "Content-Security-Policy": "default-src 'self'; script-src 'self' 'unsafe-eval' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data: https:; connect-src 'self' https://*.azurewebsites.net https://*.azurestaticapps.net;",
    "Referrer-Policy": "strict-origin-when-cross-origin"
  },
  "mimeTypes": {
    ".json": "application/json",
    ".js": "text/javascript",
    ".css": "text/css",
    ".html": "text/html",
    ".svg": "image/svg+xml",
    ".ico": "image/x-icon",
    ".png": "image/png",
    ".jpg": "image/jpeg",
    ".jpeg": "image/jpeg",
    ".webp": "image/webp",
    ".avif": "image/avif"
  },
  "trailingSlash": "never",
  "forwardingGateway": {
    "allowedForwardedHosts": [],
    "requiredHeaders": {}
  }
}
